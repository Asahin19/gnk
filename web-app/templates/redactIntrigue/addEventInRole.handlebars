            <div class="formRow">
                <div class="span1">
                    Titre
                </div>
                <div class="span4">
                    <input disabled="disabled" type="text" name="roleHasEventTitle{{ eventId }}" value="" id="roleHasEventTitle{{ eventId }}">
                </div>
                <div class="span1">
                    Est annonc√©
                </div>
                <div class="span4">
