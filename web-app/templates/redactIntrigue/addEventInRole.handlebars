           href="#collapseEvent{{ roleId }}-{{ eventId }}" data-eventId="{{ eventId }}">
            {{ eventName }}
        </a>
    </div>
    <div id="collapseEvent{{ roleId }}-{{ eventId }}" class="accordion-body collapse">
