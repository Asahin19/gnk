<div class="tab-pane" id="role_{{ role.id }}">
    <form name="updateRole_{{ role.id }}" data-url="">
    <input type="hidden" name="id" value="{{ role.id }}"/>
    <input type="hidden" name="plotId" id="plotId" value="{{ role.plotId }}"/>

    <div style="margin:auto">
        <div class="row formRow">
            <div class="span1">
                <label for="roleCode">
                    Nom
                </label>
            </div>
            <div class="span4">
                <input type="text" name="roleCode" id="roleCode" value="{{ role.code }}" required=""/>
            </div>
        </div>
        <div class="row formRow">
            <div class="span1">
                <label for="rolePipi">
                    PIPI
                </label>
            </div>
            <div class="span4">
                <input type="number" name="rolePipi" id="rolePipi" value="{{ role.pipi }}" required=""/>
            </div>
            <div class="span1">
                <label for="rolePipr">
                    PIPR
                </label>
            </div>
            <div class="span4">
                <input type="number" name="rolePipr" id="rolePipr" value="{{ role.pipr }}" required=""/>
            </div>
        </div>
        <div class="row formRow">
            <div class="span1">
                <label>
                    Tags
                </label>
            </div>
            <div class="span4">
                <a href="#roleTagsModal_{{ role.id }}" class="btn" data-toggle="modal">Choisir les tags</a>
            </div>
            <div class="span1">
                <label for="roleType">
                    Type
                </label>
            </div>
            <div class="span4">
                <select name="roleType" id="roleType" required="">
                    <option value="PJ">PJ</option>
                    <option value="PNJ">PNJ</option>
                    <option value="PHJ">PHJ</option>
                </select>
            </div>
        </div>
        <div class="row formRow">
            <div class="span1">
                <label for="rolePastScene">
                    Scènes passées
                </label>
            </div>
            <div class="span4">
                <a href="#rolePastScenesModal_{{ role.id }}" class="btn" data-toggle="modal">
                    Choisir les scènes passées
                </a>
            </div>
            <div class="span1">
                <label for="roleEvent">
                   Evènements
                </label>
            </div>
            <div class="span4">
                <a href="#roleEventsModal_{{ role.id }}" class="btn" data-toggle="modal">
                    Choisir les évènements
                </a>
            </div>
        </div>
        <div class="row formRow text-center">
            <label for="roleDescription">
                Description
            </label>
        </div>
        <textarea name="roleDescription" id="roleDescription" rows="5" cols="100">{{{ role.description }}}</textarea>
    </div>
    <div id="roleEventsModal_{{ role.id }}" class="modal hide fade" tabindex="-1">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h3>
                Evènements
            </h3>
        </div>

        <div class="modal-body">
            <ul>

            </ul>
        </div>

        <div class="modal-footer">
            <button class="btn" data-dismiss="modal">Ok</button>
        </div>
    </div>
    <div id="rolePastScenesModal_{{ role.id }}" class="modal hide fade" tabindex="-1">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h3>
                Scènes passées
            </h3>
        </div>

        <div class="modal-body">
            <ul>

            </ul>
        </div>

        <div class="modal-footer">
            <button class="btn" data-dismiss="modal">Ok</button>
        </div>
    </div>

    <div id="roleTagsModal_{{ role.id }}" class="modal hide fade" tabindex="-1">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h3 id="myModalLabel{{ role.id }}">Tags</h3>
            <input class="input-medium search-query" data-content="roleTags{{ role.id }}" placeholder="Rechercher..."/>
        </div>

        <div class="modal-body">
            <ul class="roleTags{{ role.id }}">
            {{#each roleTagList}}
                <li class="modalLi" data-name="{{toLowerCase name }}">
                    <label>
                        <input type="checkbox" name="roleTags_{{ id }}" id="roleTags_{{ id }}"/>
                        {{ name }}
                    </label>
                </li>
            {{/each}}
            </ul>
        </div>

        <div class="modal-footer">
            <button class="btn" data-dismiss="modal">Ok</button>
        </div>
    </div>
    <input type="button" name="Update" data-id="{{ role.id }}" value="Update" class="btn btn-primary updateRole"/>
    </form>
</div>